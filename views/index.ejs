    <div class="container-fluid">
      <div class="row-fluid">

  <div class="span3">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li>
          <form class="form-vertical">
            <fieldset>
              <div id="legend" class="">
                <legend class="">Search your MEP</legend>
              </div>
              <div class="control-group">
                <!-- Search input-->
                <label class="control-label">Name</label>
                <div class="controls">
                  <input type="text" name="mep_name" placeholder="MEP Name" class="input-medium search-query">
                  <p class="help-block"></p>
                </div>
              </div>
              <div class="control-group">
                <!-- Select Basic -->
                <label class="control-label">Country</label>
                <div class="controls">
                  <select class="input-medium" name="mep_country">
                    <option>Italy</option>
                    <option>France</option>
                    <option>Germany</option>
                  </select>
                </div>
              </div>
              <div class="control-group">
                <!-- Select Basic -->
                <label class="control-label">Party</label>
                <div class="controls">
                  <select class="input-medium" name="mep_party">
                    <option>PP</option>
                    <option>CC</option>
                    <option>DD</option>
                  </select>
                </div>
              </div>
              <div class="control-group">
                  <label class="control-label"></label>
                  <!-- Button -->
                  <div class="controls">
                    <button class="btn">Search</button>
                  </div>
                </div>
            </fieldset>
          </form>
        </li>
      </ul>
    </div>  
  </div> <!--/sidebar -->

        <div class="span9">          
            <!-- loop through meps -->
            <% counter = 0 %>
            <% for(var i = 1; i < meps.length; i++) { %>
              <% if (counter == 0) { %>
               <div class="row-fluid"> 
                 <ul class="thumbnails">
              <% } %>
                    <li class="span4">
                     <div class="thumbnail">
                       <img src="<%= meps[i].mep_epFotoUrl %>" class="img-rounded" style="float:left; padding-right:5px; height:215px; width:170px;" />
                     <div style="float:left; width:90px; max-height:215px;"
                       <dl>
                         <dt>Country</dt> <dd><%= meps[i].mep_country %></dd>
                         <dt>Faction</dt> <dd><%= meps[i].mep_faction %></dd>
                         <dt>Local Party</dt> <dd><%= meps[i].mep_localParty %></dd>
                       </dl></div>
                      <div class="caption" style="clear:both;">
                         <h4>
                            <%= meps[i].mep_firstName + ' ' + meps[i].mep_lastName %>
                            <p>
                              <img src="https://dev.twitter.com/sites/default/files/images_documentation/bird_blue_16.png" />
                              <small><a class="twitter" href="https://twitter.com/intent/user?screen_name=<%= meps[i].mep_twitterUserName %>"> <%= meps[i].mep_twitterUserName %>  </a></small>
                            </p>
                         </h4>
                     </div>

                     <p>
                       <a href="http://twitter.com/intent/tweet/?text=@<%= meps[i].mep_twitterUserName %>&hashtags=tweetyourmep" class="btn btn-primary">
                      Tweet
                       </a> 
                      <!-- <a href="https://twitter.com/intent/user?screen_name=<%= meps[i].mep_twitterUserName %>" class="btn">Follow</a> -->
                     </p>
                    </div><!--/span-->
              <% if (counter == 2) { %>
                   </ul>
                 </div> 
                 <% counter = 0 %>
              <% } else  { %>
                <% counter++; %>
              <% } %>
            <% } %>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Spaghetti Open Data </p>
      </footer>

    </div><!--/.fluid-container-->

